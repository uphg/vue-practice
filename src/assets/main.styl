@import './base.styl'

a
  text-decoration none
  color inherit

.sidebar
  width 20rem
  padding 1.5rem
  border-right 1px solid var(--border-color)
  position fixed
  left 0
  bottom 0
  top 0
  z-index 1
  display flex
  flex-direction column
  .sidebar-link
    color #37352f
    font-weight 700
    padding 0.25rem 0
    &.router-link-active
      color var(--color-primary)

.page
  padding-left 20rem
  min-height 100vh
  .page-content
    max-width 820px
    margin 0 auto
    padding 10rem 2.5rem 2rem

.e-demo
  padding 1.25rem 1.5rem
  border-radius 3px
  border 1px solid var(--border-color)
  margin-top 1.25rem
  margin-bottom 1.25rem

@media (max-width: 959px)
  .sidebar
    display none
  .page
    padding-left 0