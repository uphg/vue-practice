@import './base.styl'

a
  text-decoration none
  color inherit

.sidebar
  width 20rem
  padding 1.5rem
  border-right 1px solid #dcdfe6
  position fixed
  left 0
  bottom 0
  top 0
  z-index 1
  display flex
  flex-direction column
  .sidebar-link
    color #37352f
    font-weight 700
    padding 0.25rem 0
    &.router-link-active
      color var(--color-primary)

.page
  padding-left 20rem
  min-height 100vh
  .page-content
    padding 2rem 2.5rem

@media (max-width: 959px)
  .sidebar
    display none
  .page
    padding-left 0